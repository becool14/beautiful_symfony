{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gradient-to-r from-green-500 to-teal-500">
    <div class="bg-white p-8 rounded-xl shadow-lg w-full max-w-md">
        <h2 class="text-3xl font-bold mb-6 text-center text-gray-800">Register</h2>

        {# Flash-повідомлення #}
        {% for message in app.flashes('success') %}
            <div class="bg-green-100 text-green-700 border-l-4 border-green-500 p-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 text-red-700 border-l-4 border-red-500 p-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <form method="POST" action="{{ path('register') }}" class="space-y-4">
            <div>
                <label for="login" class="block text-gray-700 font-semibold">Username</label>
                <input type="text" name="login" id="login" required class="w-full px-4 py-2 mt-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400">
            </div>

            <div>
                <label for="password" class="block text-gray-700 font-semibold">Password</label>
                <input type="password" name="password" id="password" required class="w-full px-4 py-2 mt-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400">
            </div>

            <button type="submit" class="w-full bg-green-500 text-white py-2 rounded-lg hover:bg-green-600 transition-all duration-300">Register</button>
        </form>

        <p class="mt-6 text-center text-gray-500 text-sm">Already have an account? <a href="{{ path('login') }}" class="text-green-500 hover:underline">Login here</a></p>
    </div>
</div>
{% endblock %}
